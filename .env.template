# AWS Face Recognition System Environment Variables Template
# Copy this file to .env and fill in your actual values

# AWS Configuration - Get these from your AWS account security credentials
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_HERE
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY_HERE
AWS_DEFAULT_REGION=YOUR_AWS_REGION  # e.g., us-east-1, us-west-2, eu-west-1, etc.

# SQS Queue URLs - Replace with your actual queue URLs after creating them
# Format: https://sqs.REGION.amazonaws.com/ACCOUNT_ID/QUEUE_NAME
INPUT_QUEUE_URL=https://sqs.YOUR_AWS_REGION.amazonaws.com/YOUR_AWS_ACCOUNT_ID/YOUR_INPUT_QUEUE_NAME
OUTPUT_QUEUE_URL=https://sqs.YOUR_AWS_REGION.amazonaws.com/YOUR_AWS_ACCOUNT_ID/YOUR_OUTPUT_QUEUE_NAME

# S3 Bucket Names - Must be globally unique across all AWS accounts
INPUT_BUCKET=YOUR_UNIQUE_INPUT_BUCKET_NAME
OUTPUT_BUCKET=YOUR_UNIQUE_OUTPUT_BUCKET_NAME

# EC2 Configuration for Auto Scaling - Get these from your AWS EC2 console
AMI_ID=YOUR_AMI_ID                    # Amazon Machine Image ID (e.g., ami-0abcdef1234567890)
SECURITY_GROUP_ID=YOUR_SECURITY_GROUP_ID  # Security Group ID (e.g., sg-0123456789abcdef0)
SUBNET_ID=YOUR_SUBNET_ID              # Subnet ID (e.g., subnet-0123456789abcdef0)

# Lambda Configuration - For S3-to-SQS Lambda function
SQS_QUEUE_URL=https://sqs.YOUR_AWS_REGION.amazonaws.com/YOUR_AWS_ACCOUNT_ID/YOUR_INPUT_QUEUE_NAME

# Auto Scaling Configuration (Optional - has defaults)
MAX_INSTANCES=5                       # Maximum number of EC2 instances to launch
INSTANCE_TYPE=t2.micro               # EC2 instance type for workers
IAM_INSTANCE_PROFILE=EC2FaceWorkerRole  # IAM role name for EC2 instances